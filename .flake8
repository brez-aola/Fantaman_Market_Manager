[flake8]
# Align flake8 to permit slightly longer lines (some modules contain long
# SQL strings and test fixtures). We'll keep Black at 88 but avoid noisy
# E501 failures until we can refactor long literals.
max-line-length = 120
extend-ignore = E203,W503
exclude = .venv,venv,build,dist,.git,__pycache__,tests/data,apply_options_*.py,scripts
per-file-ignores =
    app.py:E501,F541,W605,F841,F405
    app/*:E501
    app/services/*:E501
    app/utils/*:E501
    tests/*:E501
    alembic/versions/*:E501
    apply_options_*.py:E401,E501
    scripts/*:E402,E501
